<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#A1A1A1"
                android:endColor="#A1A1A1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <!-- pressed -->

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>